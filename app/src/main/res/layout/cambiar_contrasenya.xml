<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    app:flow_horizontalGap="8dp">

    <!-- Boton de Volver -->
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/red"
        android:text="Volver"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="8dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/contrasenaOlvidada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Cambiar"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="constraseña"
        android:textAlignment="viewEnd"
        android:textSize="45dp"
        android:textStyle="bold" />

    <!-- Texto para la nueva contraseña -->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Introduzca su nueva contraseña:"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <!-- Texto para que repita la contraseña -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Repita la contraseña:"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:background="@color/grey"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <!-- Boton de confirmar cambio de contraseña -->
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/red"
        android:text="Confirmar cambio de contraseña"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:cornerRadius="8dp" />



</LinearLayout>